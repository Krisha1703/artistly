generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  firstName   String
  lastName    String
  password     String
  role        String   @default("event_planner")
  lastLoginAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Category {
  DJ
  Singer
  Dancer
  Speaker
  Magician
  Comedian
}

enum Language {
  English
  Hindi
  Tamil
  Malayalam
  Thai
  Spanish
  French
  German
  Japanese
  Gujarati
  Punjabi
  Bengali
  Telugu
  Kannada
  Marathi
}


enum Availability {
  Weekdays
  Weekends
  Mornings
  Afternoons
  Evenings
  Nights
}



model Artist {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  bio          String
  category     Category[]
  languages    Language[]
  location     String
  feeRange     String
  rating       Float  
  profilePic   String?  
  availability Availability[]  @default([])
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
